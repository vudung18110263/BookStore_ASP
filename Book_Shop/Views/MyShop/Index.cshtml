@using Book_Shop.Models
@{
    ViewBag.Title = "MyShop";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MyShop</title>
    <link href="~/Content/styles_myShop.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <div id="">
        <main>
            <div class="container-fluid">
                
                <h1 class="mt-4">QUẢN LÝ SẢN PHẨM</h1>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table mr-1"></i>
                        Danh sách sản phẩm
                        <button class="btn btn-primary  btn-sm rounded-0 ">
                        <i class="fa fa-edit"></i>@Html.ActionLink("Create", "Create", new { }, new { Style = "color:White;" })
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered textcolor" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Image</th>
                                        <th>Description</th>
                                        <th>Category</th>
                                        <th>Stock</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Image</th>
                                        <th>Description</th>
                                        <th>Category</th>
                                        <th>Stock</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (Product prod in Model)
                                    {
                                        <tr>
                                            <td>@prod.name</td>
                                            <td>@prod.price</td>
                                            <td><img src="@prod.image" width="100" height="150" /></td>
                                            <td width="200px">@prod.description</td>
                                            <td>@prod.category</td>
                                            <td>@prod.stock</td>
                                            <td>
                                                <button class="btn btn-danger  btn-sm rounded-0" style="width: 100px; height: 40px; margin-bottom: 5px"><i class="fa fa-trash " ></i>@Html.ActionLink("Delete", "Delete", new { id = prod.id }, new { Style = "color:White;" })</button>
                                                <button class="btn btn-success  btn-sm rounded-0" style="width: 100px; height: 40px; margin-bottom: 5px"><i class="fa fa-table"></i>@Html.ActionLink("Details", "Details", new { id = prod.id }, new { Style = "color:White;" })</button>
                                                <button class="btn btn-primary  btn-sm rounded-0 " style="width: 100px; height: 40px; margin-bottom: 5px"><i class="fa fa-edit "></i>@Html.ActionLink("Edit", "Edit", new { id = prod.id }, new { Style = "color:White;" })</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/datatables-demo.js"></script>
</body>
</html>

