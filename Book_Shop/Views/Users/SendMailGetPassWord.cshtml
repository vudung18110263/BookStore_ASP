
@{
    ViewBag.Title = "SendMailGetPassWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
<body>
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            Forgot password
                        </div>
                        <div class="panel-body">
                            <form action="/Users/SendMailGetPassWord" method="post">
                                <div class="form-group col-xs-6">
                                    <label for="name-field">Tên Tài khoản</label>
                                    <input type="text" class="form-control" id="name-field" name="account" placeholder="Your name" required>
                                </div>

                                <div class="form-group col-xs-12">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                                </div>

                                <p>@ViewBag.Kq </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>