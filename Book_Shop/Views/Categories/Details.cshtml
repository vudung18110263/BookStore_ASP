@model Book_Shop.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<link href="~/Content/admintable.css" rel="stylesheet" />
<div class="container">
    <h1 class="mt-4">CHI TIẾT LOẠI SÁCH</h1>

    <div class="admin__layout">
        <table class="admin__table">
            <thead>
                <tr class="admin__header">
                    <th style="text-align:center">Name</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.name)</td>
                </tr>
            </tbody>
        </table>
        <div class="pagination" style="margin-top:10px; margin-bottom:10px">
            <a href="/Categories/Edit/@Model.id" class="action-link" style="color: white">Edit</a>
            <a href="/Categories/Index" class="action-link" style="margin-left: 10px">Back to list</a>
        </div>
    </div>
</div>
