@model Book_Shop.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<link href="~/Content/admintable.css" rel="stylesheet" />
<div class="container">
    <h1 class="mt-4">CHỈNH SỬA LOẠI SÁCH</h1>

    @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { encType = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="admin__layout">
            <table class="admin__table table-vertical">
                <tr>
                    <th class="admin__header">ID</th>
                    <td>@Html.DisplayFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <th class="admin__header">Name</th>
                    <td>
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
            <div class="pagination" style="margin-top:10px; margin-bottom:10px">
                <a class="action-link"><input type="submit" value="Save" style="color: white" /></a>
                <a href="/Categories/Index" class="action-link" style="margin-left: 10px">Back to list</a>
            </div>
        </div>
    }

</div>
