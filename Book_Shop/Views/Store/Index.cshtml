<!-- top-brands -->
<div class="top-brands">
    <div class="container">
        @if (HttpUtility.UrlDecode(Request.Unvalidated.QueryString["category"]) == null && HttpUtility.UrlDecode(Request.Unvalidated.QueryString["q"]) == null)
        {
            <h3>Sản phẩm đề xuất</h3>
        }
        else if (HttpUtility.UrlDecode(Request.Unvalidated.QueryString["q"]) == null && Model.Count !=0)
        {
            <h3>@Model[0].category</h3>
        }
        else if (HttpUtility.UrlDecode(Request.Unvalidated.QueryString["category"]) == null)
        {
            <h3>Kết quả tìm kiếm</h3>
        }
        <div class="agile_top_brands_grids">
            @foreach (var item in Model)
            {
                <div class="col-md-3 top_brand_left" style="margin: 12px 0">
                    <div class="hover14 column ">
                        <div class="agile_top_brand_left_grid hover-tien">
                            @if (HttpUtility.UrlDecode(Request.Unvalidated.QueryString["category"]) == null
                            && HttpUtility.UrlDecode(Request.Unvalidated.QueryString["q"]) == null)
                            {
                            <div style="z-index: 1" class="tag"><img src="~/images/tag.png" alt=" " class="img-responsive" /></div>
                            }
                            <div class="agile_top_brand_left_grid1">
                                <figure>
                                    <div class="snipcart-item block">
                                        <div class="snipcart-thumb">
                                            <a href="/Store/Single?id=@(item.id)"><img class="img-tien" src="@(item.image)" width="150" height="150" /></a>
                                            <p style="font-size: 1.1rem">@item.name</p>
                                            <span style="font-size: 1.2rem">đ@(@String.Format("{0:n0}", item.price))</span><h4 style="display: inline"><span style="color: red">đ@(@String.Format("{0:n0}", item.price*1.5))</span></h4>
                                        </div>
                                        <div class="snipcart-details top_brand_home_details">
                                            <input type="button" onclick="addToCart(@item.id)" value="Thêm vào giỏ hàng" class="button" />
                                        </div>
                                    </div>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <br />
            <div class="clearfix"> </div>
            <div class="pagination1" style="float: right">
                @Html.PagedListPager(Model, page => Url.Action("Search", new { page, category = Request.QueryString["category"], q = Request.QueryString["q"] }))
            </div>
        </div>
    </div>
</div>
