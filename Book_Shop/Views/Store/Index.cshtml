@model PagedList.IPagedList<Book_Shop.Models.Product>
@using PagedList.Mvc;
<link href="~/Content/store.css" rel="stylesheet" type="text/css" media="all" />
@section products_breadcrumb {
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i>@Html.ActionLink("Trang chủ", "Index", "Store")<span>|</span></li>
                @if (HttpUtility.UrlDecode(Request.Unvalidated.QueryString["category"]) != null && Model.Count != 0)
                {
                    <li>@Model[0].category</li>
                }
            </ul>
        </div>
    </div>
}

<!-- banner -->
@section w3l_banner_nav_right
{
    <section class="slider">
        <div class="flexslider">
            <ul class="slides">
