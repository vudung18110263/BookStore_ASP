@using Book_Shop.Models
@{

    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>MyShop</title>
    <link href="~/Content/styles_myShop.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">QUẢN LÝ NGƯỜI DÙNG</h1>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table mr-1"></i>
                       List user
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered textcolor" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                       
                                        <th>Avatar</th>
                                        <th>Gmail</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Fullname</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Username</th>
                                     
                                        <th>Avatar</th>
                                        <th>Gmail</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Fullname</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (User u in Model)
                                    {
                                        <tr>
                                            <td>@u.account</td>

                                            <td><img src="@u.avatar" width="100" height="100" /></td>
                                            <td>@u.mail</td>
                                            <td>@u.address</td>
                                            <td>@u.phone</td>
                                            <td>@u.fullname</td>
                                            <td>@(u.isActive==1?"Available": "Disable")</td>
                                            <td>
                                                <button class="btn @(u.isActive == 1 ? "btn-danger" : "btn-success")  btn-sm rounded-0"><i class="fa @(u.isActive == 1 ? "fa-lock" : "fa-unlock")" aria-hidden="true"></i>@Html.ActionLink(u.isActive == 1 ? "Disable" : "Enable", u.isActive == 1 ? "Disable" : "Enable", new { id = u.id }, new { Style = "color:White;" })</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/scripts.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/datatables-demo.js"></script>
</body>
</html>

