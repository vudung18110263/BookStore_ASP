@model Book_Shop.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<link href="~/Content/admintable.css" rel="stylesheet" />
<style>
    a:hover {
        text-decoration: none;
    }
</style>
<div class="container">
    <h1 class="mt-4">CHỈNH SỬA SẢN PHẨM</h1>

    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { encType = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        <div class="admin__layout">
            <table class="admin__table table-vertical">
                <tr>
                    <th class="admin__header">ID</th>
                    <td>@Html.DisplayFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })</td>
                </tr>
                <tr>
                    <th class="admin__header">Name</th>
                    <td>
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Image</th>
                    <td class="image-field">
                        <img src="@Html.DisplayFor(model => model.image)" height="120px" width="120px" />
                        <label for="file-upload" class="custom-file-upload action-link">
                            Upload file
                        </label>
                        <input id="file-upload" type="file" value=@(ViewBag.Image) name="image" />
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Description</th>
                    <td>
                        @Html.TextAreaFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Category</th>
                    <td>
                        @Html.EditorFor(model => model.category, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.category, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Price</th>
                    <td>
                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Rate</th>
                    <td>
                        @Html.EditorFor(model => model.rate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.rate, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Stock</th>
                    <td>
                        @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <th class="admin__header">Author</th>
                    <td>
                        @Html.DropDownList("authorId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.authorId, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
            <div class="pagination" style="margin-top:10px; margin-bottom:10px">
                <a class="action-link"><input type="submit" value="Save" style="color: white" /></a>
                <a href="/Products/Index" class="action-link" style="margin-left: 10px">Back to list</a>
            </div>
        </div>
    }
</div>
